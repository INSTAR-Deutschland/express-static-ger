                <amp-image-lightbox id="DownThemAll_05" layout="nodisplay"></amp-image-lightbox>
                <amp-image-lightbox id="DownThemAll_06" layout="nodisplay"></amp-image-lightbox>

            </div>
            <!-- /container -->
        </div>
        <!-- /wrap -->

        <% include ../_partials/content/_bluenav-general-mobile.ejs %>

        <footer>
            <% include ../_partials/amp/_amp-footer.ejs %>
        </footer>
    </body>
