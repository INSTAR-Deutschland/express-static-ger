                        <div class="margin">
                          <h3>Live Video</h3>
                          <br>
                          <div>
                              <amp-img on="tap:lightbox8" role="button" tabindex="0" src="/images/Go1984_03_H264.png" width="800" height="573" layout="responsive" class="shadow"></amp-img>
                          </div>
